<%- include('layout', { title: title, user: user, body: `
  <section class="dashboard">
    <h2>All transactions</h2>
    <div class="account-summary">
      <div><strong>Account:</strong> ${account.account_number}</div>
      <div><strong>Balance:</strong> ${account.balance} ${account.currency}</div>
    </div>

    <div class="card">
      <table class="tx-table">
        <thead>
          <tr>
            <th>Type</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          ${transactions.map(t => `
            <tr>
              <td>${t.type}</td>
              <td>${t.amount}</td>
              <td>${t.description || ''}</td>
              <td>${new Date(t.created_at).toLocaleString()}</td>
            </tr>
          `).join('')}
        </tbody>
      </table>
    </div>
  </section>
` }) %>
